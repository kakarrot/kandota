<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/theme_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/action_btn_height"
        android:layout_height="@dimen/action_btn_height"
        android:src="@drawable/ic_action_home"
        android:background="@drawable/action_bar_item_bg"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/action_bar_text_color"
        android:textSize="@dimen/font_size_action_title"
        android:text="标题"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/action_btn_height"
        android:layout_height="@dimen/action_btn_height"
        android:padding="@dimen/default_item_padding"
        android:src="@drawable/ic_action_more"
        android:background="@drawable/action_bar_item_bg"/>
</LinearLayout>