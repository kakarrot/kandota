<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="actionBarSize">0dp</item>
        <item name="android:windowBackground">@color/main_bg_color</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_home</item>
        <item name="logo">@drawable/transparent_bg</item>
        <item name="android:windowContentOverlay">@drawable/action_bar_overlay</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="selectableItemBackground">@drawable/action_bar_item_bg</item>
        <item name="actionModeBackground">@color/action_bar_bg_color</item>
        <item name="actionModeStyle">@style/MyActionModeStyle</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_mode_cancel</item>
        <item name="actionMenuTextColor">@color/action_bar_text_color</item>
        <item name="actionMenuTextAppearance">@style/MyActionBar.MenuItem</item>
        <item name="actionModeCloseButtonStyle">@style/MyActionModeCloseButton</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SwipTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar样式 -->
    <style name="MyActionBar" parent="AppTheme.AppBarOverlay">
        <item name="background">@color/action_bar_bg_color</item>
        <item name="titleTextStyle">@style/MyActionBar.Title</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <!-- ActionBar字体 -->
    <style name="MyActionBar.Title" parent="AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/action_bar_text_color</item>
        <item name="android:textSize">@dimen/font_size_action_title</item>
    </style>

    <style name="MyActionBar.MenuItem" parent="AppTheme.AppBarOverlay">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:height">@dimen/action_bar_height</item>
    </style>

    <!-- Setup the style of the ActionMode here -->
    <style name="MyActionModeStyle">
        <item name="titleTextStyle">@style/MyActionModeTitle</item>
        <item name="actionModeSplitBackground">@mipmap/ic_launcher</item>
    </style>

    <!-- Setup the text style of the ActionMode here -->
    <style name="MyActionModeTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="MyActionModeCloseButton" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@drawable/action_bar_item_bg</item>
    </style>

    <!-- SubMenu样式 -->
    <style name="MyDropDownListView" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:background">@android:color/white</item>
        <item name="android:listSelector">@drawable/item_common_bg</item>
    </style>

    <style name="ItemCommon">
        <item name="android:paddingTop">@dimen/default_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/default_item_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/default_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/default_item_padding_horizontal</item>
    </style>

    <style name="ItemTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemTitle2">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ItemSummary">
        <item name="android:textSize">@dimen/font_size_least</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ptrHeaderTextStyle">
        <item name="android:typeface">normal</item>
    </style>

    <style name="SetItemHeader">
        <item name="android:textSize">@dimen/font_size_least</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/window_color_secondary</item>
    </style>

    <style name="SetItemTextView" parent="ItemBackaground">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/tv_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/set_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="ItemMe" parent="ItemBackaground">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/tv_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SetItem_Title">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/tv_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SetItem_Summary">
        <item name="android:textSize">@dimen/font_size_least</item>
        <item name="android:textColor">@color/tv_desc_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ImageDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/common_line_color</item>
        <item name="android:contentDescription">@string/str_empty</item>
    </style>

    <style name="LoadingDots">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDuration">10</item>
    </style>

    <style name="ReaderText">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">@dimen/reader_text_size</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_out</item>
    </style>

